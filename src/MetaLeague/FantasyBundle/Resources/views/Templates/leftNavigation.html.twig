<!-- Sidebar -->
<div class="sidebar">
    <div class="sidebar-dropdown"><a href="#">Navigation</a></div>

    {% if app.user.leagues|length > 0 %}
        <ul id="nav">
        {% for league in app.user.leagues %}
            <li class="has_sub">
                <!-- League Name -->
                <a href="#">
                    <i class="icon-tasks"></i>{{ league|slice(0,15) }}
                    <span class="pull-right"><i class="icon-chevron-right"></i></span>
                </a>

                <!-- League Options -->
                <ul>
                    <li><a href="widgets1.html">Manage Roster</a></li>
                    <li><a href="widgets2.html">Live Scoreboard</a></li>
                    <li><a href="widgets3.html">League Standings</a></li>
                </ul>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <!-- No Leagues, Need to join one -->
        <p>Sign Up For A League / Create League</p>
    {% endif %}
</div>

<!-- Sidebar ends -->